{
  "name": "metadata-microservice",
  "version": "1.0.0",
  "description": "A complete Node.js microservice for storing and retrieving PDF metadata",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node scripts/run-migrations.js",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:refresh": "node scripts/migrate.js refresh",
    "seed": "node scripts/seed.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "jest --coverage"
  },
  "keywords": [
    "microservice",
    "pdf",
    "metadata",
    "nodejs",
    "postgresql",
    "jwt"
  ],
  "author": "Raymond D. Chavez Jr.",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^9.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
